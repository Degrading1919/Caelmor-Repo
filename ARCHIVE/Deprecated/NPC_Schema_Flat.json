// NPC_Schema_Flat_v2.txt
// Final accepted NPC schema + optional vendor/faction fields 
{
  "npcId": "string",                  // required, unique
  "displayName": "string",

  // High-level interaction behavior
  "interactionType": "merchant|quest_giver|trainer|civilian|other",

  // Where this NPC is primarily found
  "zoneId": "string",                 // reference to Zone.zoneId

  // Trainer hook (null if not a trainer)
  "trainerSkillId": "skill_id|null",

  // Primary dialogue tree
  "dialogueId": "dialogue_tree_id",

  // Optional vendor inventory (for v1.5+)
  "vendorInventoryId": "vendor_inventory_id|null",

  // Optional faction link (helps regional/cultural flavor)
  "factionId": "faction_id|null",

  // Free-form description for design/narrative use
  "description": "string"
}
