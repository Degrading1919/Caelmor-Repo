// Crafting_Recipe_Schema_Modular_v2.txt
// Final accepted schema + xpGain adjustment 
{
  "recipeId": "string",               // required, unique

  // Which station this recipe uses
  "stationType": "forge|fletching_bench|leather_rack|cooking_fire|other",

  // Inputs (all consumed)
  "ingredients": [
    {
      "itemId": "item_id",
      "quantity": 2
    }
  ],
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Crafting Recipe (v2.1)",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique recipe ID"
    },

    "skill": {
      "type": "string",
      "description": "Crafting skill used (smithing, fletching, leatherworking, cooking)"
    },

    "required_level": {
      "type": "integer",
      "minimum": 1,
      "description": "Minimum required skill level"
    },

    "station": {
      "type": "string",
      "enum": ["forge", "fletching_bench", "leather_rack", "campfire"],
      "description": "Crafting station required to perform the recipe"
    },

    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "item": { "type": "string" },
          "qty": { "type": "integer", "minimum": 1 }
        },
        "required": ["item", "qty"]
      }
    },

    "result": {
      "type": "object",
      "properties": {
        "item": { "type": "string" },
        "qty": { "type": "integer", "minimum": 1 }
      },
      "required": ["item", "qty"]
    },

    "time": {
      "type": "number",
      "minimum": 0,
      "description": "Crafting time in seconds, executed on the host tick loop"
    },

    "xp": {
      "type": "integer",
      "minimum": 0,
      "description": "XP awarded on successful craft"
    }
  },

  "required": [
    "id",
    "skill",
    "required_level",
    "station",
    "ingredients",
    "result",
    "time",
    "xp"
  ]
}

  // Outputs — support multi-output and by-products
  "results": [
    {
      "itemId": "item_id",
      "quantity": 1
    }
  ],

  // Crafting time — seconds on the authoritative tick loop
  "timeToCraft": 3.0,

  // Skill hooks
  "skillId": "smithing|fletching|leatherworking|cooking|utility",
  "minSkill": 1,

  // Optional but recommended — per recipe XP for tuning
  "xpGain": 0
}
