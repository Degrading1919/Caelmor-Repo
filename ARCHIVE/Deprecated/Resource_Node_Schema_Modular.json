// Resource_Node_Schema_Modular_v2.txt
// Final approved v1 fields with retained resourceItemId 
{
  "nodeId": "string",                 // required, unique

  // High-level resource behavior
  "resourceType": "ore|wood|herb|game|special",

  // Item produced by this node
  "resourceItemId": "item_id",

  // Yield behavior
  "yieldMin": 1,
  "yieldMax": 3,

  // Respawn & lifecycle (seconds, per Phase 1.4 WorldSave rules) :contentReference[oaicite:3]{index=3}
  "respawnTimeSeconds": 60,

  // Skill requirements
  "skillRequirement": {
    "skillId": "mining|woodcutting|hunting|foraging",
    "minLevel": 1
  }
}
