{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QuestChain Schema (v1.0)",
  "type": "object",

  "properties": {
    "questChainId": { "type": "string" },
    "title": { "type": "string" },
    "regionId": { 
      "type": "string",
      "enum": ["lowmark", "thornfell", "mire", "emberholt"]
    },
    "isRepeatable": { "type": "boolean" },

    "quests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "questId": { "type": "string" },
          "title": { "type": "string" },

          "npcGiverId": { "type": "string" },
          "npcTurnInId": { "type": "string" },

          "prerequisites": {
            "type": "array",
            "items": { "type": "string" }
          },

          "startType": {
            "type": "string",
            "enum": ["auto", "talk", "auto_or_talk", "talk_or_autostart"]
          },

          "startTriggerId": { "type": "string" },

          "description": { "type": "string" },

          "objectives": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },

                "type": {
                  "type": "string",
                  "enum": [
                    "location",
                    "location_interact",
                    "interact",
                    "gather",
                    "craft",
                    "equip",
                    "kill",
                    "collect"
                  ]
                },

                "targetId": { "type": "string" },
                "count": { "type": "integer", "minimum": 1 },

                "optional": { "type": "boolean" },

                "alternateTargets": {
                  "type": "array",
                  "items": { "type": "string" }
                },

                "areaTriggerId": { "type": "string" },
                "triggerId": { "type": "string" }
              },
              "required": ["id", "type"]
            }
          },

          "rewards": {
            "type": "object",
            "properties": {
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "count": { "type": "integer", "minimum": 1 },
                    "conditionalObjectiveId": { "type": "string" }
                  },
                  "required": ["id", "count"]
                }
              },
              "xp": {
                "type": "object",
                "patternProperties": {
                  "^[a-zA-Z_]+$": { "type": "number" }
                }
              }
            }
          }
        },
        "required": [
          "questId",
          "title",
          "npcGiverId",
          "npcTurnInId",
          "prerequisites",
          "startType",
          "description",
          "objectives",
          "rewards"
        ]
      }
    }
  },

  "required": ["questChainId", "regionId", "isRepeatable", "quests"]
}
